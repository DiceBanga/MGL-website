# n8n Core Settings
N8N_ENCRYPTION_KEY=replace-with-32-character-random-string
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_PUSH_BACKEND=websocket
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=America/New_York

# Supabase Connection
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Square Connection
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_APP_ID=your-square-app-id
SQUARE_ENVIRONMENT=sandbox
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key

# Email Notification Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# n8n Database Settings (SQLite by default)
DB_TYPE=sqlite
DB_SQLITE_PATH=/home/node/.n8n/database.sqlite

# Execution Settings
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_PROGRESS=true
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# Performance Settings
EXECUTIONS_PROCESS=main
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=3600
MAX_WORKFLOW_OPERATION_COUNT=50000

# Logging
N8N_LOG_LEVEL=info

# Development Tools
NGROK_AUTH=your-ngrok-auth-token

# To generate a secure encryption key, run:
# node -e "console.log(require('crypto').randomBytes(24).toString('hex'))" 