{
  "name": "mgl-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend:dev": "cd frontend && vite",
    "frontend:build": "cd frontend && tsc && vite build",
    "frontend:preview": "cd frontend && vite preview",
    "backend:dev": "cd backend && uvicorn main:app --reload",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "build": "npm run frontend:build",
    "test": "cd frontend && vitest",
    "test:payment": "node scripts/test-payment.js",
    "test:backend": "cd backend && python -m tests.test_server",
    "test:all": "npm run test && npm run test:backend",
    "supabase": "supabase"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
